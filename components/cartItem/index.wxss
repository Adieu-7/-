/* components/cartItem/index.wxss */
.cartItem{
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #999;
}
.selectImg{
  width: 32rpx;
  height: 32rpx;
}
.img{
  width: 240rpx;
  height: 240rpx;
}
.info{
  flex: 1;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.info_top,
.info-bot{
  display: flex;
  justify-content: space-between;
}
.ctrl_box{
  display: flex;
}
.ctrl_box input{
  width: 3em;
  text-align: center;
  margin:0 20rpx;
}