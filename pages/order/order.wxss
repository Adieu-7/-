/* pages/order/order.wxss */
.address_box{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  text-align: center;
  height: 150rpx;
  font-size: 40rpx;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address_box image{
  width: 48rpx;
  height: 48rpx;
}
.info_box{
  flex: 1;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 30rpx;
}
.info_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.left,.right{
  display: flex;
  align-items: center;
}
.order{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.img{
  width: 180rpx;
  height: 180rpx;
  background: #f4f5f4;
}
.order_middle{
  flex: 1;
}
.footer{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  border-top: 1px solid #666;
}
.account_box{
  flex: 1;
  color: red;
  padding-left: 30rpx;
}
.pay{
  flex-basis: 180rpx;
  background: #ab9564;
  color: white;
  text-align: center;
}
.pay.disable{
  opacity: 0.5;
}