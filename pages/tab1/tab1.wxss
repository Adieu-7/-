/* pages/tab1/tab1.wxss */
.swiper{
  width: 100%;
  height: 400rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.body{
  width: 100%;
  height: 100%;
}
.title{
  width: 100vw;
  margin: 30rpx 0rpx;
  text-align: center;
  color: #AB9564;
  font-weight: bold;
  font-size: 36rpx;
}
.theme{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}
.topic_img{
  width: 50%;
  height: 400rpx;
}
.tht{
  display: flex;
  justify-content: space-between;

}
.tht view{
  width: 49%;
  height: 200rpx;
  background: gold;
  display: flex;
}
.thb{
  width: 100%;
  height: 200rpx;
  background: gold;
  margin-top: 20rpx;
}
.footer{
  width: 100%;
  height: 100%;
}
.good{
  width: 100%;
  height: 100%;
  /* display: flex; */
  
}
.goods{
  width: 46%;
  margin: 10rpx 2%;
  height: 300rpx;
  float: left;
  background: #F5F6F5;
  text-align: center;
}
.goods image{
  width: 200rpx;
  height: 200rpx;
}
.topic_img:nth-child(1){
  border-right: 1px solid white;
  box-sizing: border-box;
}
.topic_img:nth-child(3){
  width: 100%;
  border-top: 1px solid white;
}