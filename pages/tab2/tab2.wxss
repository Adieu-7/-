/* pages/tab2/tab2.wxss */
.con{
  width: 100%;
  height: 100vh;
}
.category_left{
  width: 19%;
  height: 100%;
  border-right: 2px solid gainsboro;
  float: left;
}
.category_right{
  width: 76%;
  height: 96%;
  padding: 2%;
  float: left;
}
.choose{
  padding: 30rpx 0;
  text-align: center;
  font-size: 36rpx;
  border-left: 1px solid transparent;
}
.choose.active{
  border-left: 1px solid #ab9564;
  color: #ab9564 ;
}
.headImg{
  width: 100%;
  height: 300rpx;   
}
.name1 {
  margin: 30rpx auto;
  color: #ab9564;
  display: flex;
  align-items: center;
  justify-content: center;
}
.name1::before,
.name1::after {
  content: "";
  display: block;
  width: 80rpx;
  height: 1rpx;
  background: red;
  margin: 20rpx;
}
.product_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
c-product {
  width: 30%;
}
.product_list::after{
  content: "";
  display: block;
  width: 30%;
}
.img {
  width: 180rpx;
  height: 180rpx;
}
.name {
  font-size: 24rpx;
  text-align: center;
}
.product_list::after {
  content: "";
  display: block;
  width: 30%;
}